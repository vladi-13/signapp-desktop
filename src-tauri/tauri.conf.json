{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "desktop-app",
  "version": "0.1.0",
  "identifier": "com.vladi.signapp",

  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [
      {
        "title": "Sign Language Recognition",
        "width": 1280,
        "height": 720,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-eval'; connect-src *; media-src 'self' blob:; img-src 'self' data:"
    }
  },

  "plugins": {
    "media": {
      "video": true,
      "audio": false
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
